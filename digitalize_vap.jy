class SlopedLineRenderer( BoxRenderer ):
    def renderDrag( self, g, p1, p2 ):
        g.fillOval( p1.x-1,p1.y-1,3,3 )
        g.drawLine( p1.x, p1.y, p2.x, p2.y )

mm.setDragRenderer(SlopedLineRenderer(pp,False))

