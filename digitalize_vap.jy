def boxSelected(event):
    x= event.getStartX()
    y= event.getStartY()
    map= java.util.LinkedHashMap()
    map.put( "xtop", event.getFinishX() )
    map.put( "ytop", event.getFinishY() )
    dpr.addDataPoint( x, y, map )
    
mm.BoxSelected=boxSelected

